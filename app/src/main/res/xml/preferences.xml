<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/time_header">

        <ListPreference
            app:defaultValue="55"
            app:entries="@array/study_time_values"
            app:entryValues="@array/study_time_values"
            app:key="study_time"
            app:title="@string/study_time_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="5"
            app:entries="@array/break_time_values"
            app:entryValues="@array/break_time_values"
            app:key="break_time"
            app:title="@string/break_time_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</PreferenceScreen>
